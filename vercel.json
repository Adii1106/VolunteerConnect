{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist",
        "buildCommand": "npm --prefix frontend run build",
        "installCommand": "npm --prefix frontend ci || npm --prefix frontend install"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
